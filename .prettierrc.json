{
  "$schema": "https://json.schemastore.org/prettierrc",
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "semi": false,
  "tabWidth": 2,
  "singleQuote": true,
  "printWidth": 100,
  "trailingComma": "all",
  "htmlWhitespaceSensitivity": "ignore",
  "importOrder": ["^[a-zA-Z]", "^@[a-zA-Z]", "^@/", "^."]
}
